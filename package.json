{
  "name": "time-to-code-simulation",
  "version": "0.0.1",
  "description": "A simulation for how long it takes to get code done over time",
  "main": "lib/src/index.js",
  "scripts": {
    "build": "run-s compile check bundle coverage",
    "bundle": "webpack",
    "compile": "tsc -p .",
    "coverage": "nyc npm test",
    "check": "tslint -p .",
    "dev": "npm-run-all -s compile -p watch start:dev",
    "fix": "run-s \"check -- --fix\"",
    "start:dev": "webpack-dev-server",
    "test": "ava",
    "watch:compile": "run-s \"compile -- --watch\"",
    "watch:test": "run-s \"test -- --watch\"",
    "watch": "run-p watch:**"
  },
  "author": "greyepoxy",
  "license": "MIT",
  "devDependencies": {
    "@types/d3": "^5.7.2",
    "ava": "^2.4.0",
    "html-webpack-plugin": "^5.5.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "tslint": "^6.0.0-beta0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.6.4",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0"
  },
  "dependencies": {
    "d3": "^5.12.0"
  },
  "files": [
    "lib/src"
  ],
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "ava": {
    "files": [
      "lib/**/*tests.js"
    ],
    "source": [
      "lib/**/*.js",
      "!lib/**/*.log",
      "!lib/**/log.txt"
    ],
    "concurrency": 5
  },
  "nyc": {
    "reporter": [
      "html",
      "text-summary"
    ]
  }
}
